<%# <% cache tweet do %1> %>
  <hr />
  <p><%= sanitize tweet.full_text %></p>
  <p>
  <%= link_to tweet.date, tweet.url, target: "_blank" %>
  <small style="float: right;">
    deletes in [blank] days
    (<%= link_to "delete now", tweet_path(tweet.tweet), style: "color: red;", method: :delete, data: { confirm: "Are you sure? You will be deleting this tweet off twitter forever" } %>)
  </small>
  </p>
<%# <% end %1> %>
