<%= turbo_stream.append "tweets" do %>
  <%= render partial: "tweets/tweet", collection: @tweets %>
<% end %>

<% if @pagy.next.present? %>
  <%= turbo_stream.update "pagination" do %>
    <%= turbo_frame_tag "pagination", src: keeps_path(page: @pagy.next, format: :turbo_stream), loading: :lazy %>
  <% end %>
<% end %>
