<div class="bg-white dark:bg-slate-700 dark:text-slate-300 shadow-lg border border-slate-100 dark:border-slate-800 rounded-lg">
  <ul role="list" id="tweets" class="divide-y divide-slate-200 dark:divide-slate-800">
    <% if tweets.present? %>
      <%= render tweets %>
    <% else %>
      <li class="font-display py-6 flex justify-center text-xl font-bold text-slate-700 dark:text-slate-300">
        No tweets here, yet...
      </li>
    <% end %>
  </ul>
</div>
