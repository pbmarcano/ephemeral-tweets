<% nav_class = "group inline-flex items-center py-2 px-3 font-medium rounded-full" %>
<% active_class = "text-slate-700 bg-slate-200" %>
<% inactive_class = "text-slate-500 hover:text-slate-700" %>

<nav class="flex space-x-4 text-sm sm:text-base justify-center my-8" aria-label="Tabs">
  <%= nav_link_to upcoming_path, 
    class: nav_class, 
    active_class: active_class, 
    inactive_class: inactive_class do %>
    <svg xmlns="http://www.w3.org/2000/svg" class="fill-current h-6 w-6 mr-2" viewBox="0 0 20 20" fill="currentColor">
      <path d="M10 2a6 6 0 00-6 6v3.586l-.707.707A1 1 0 004 14h12a1 1 0 00.707-1.707L16 11.586V8a6 6 0 00-6-6zM10 18a3 3 0 01-3-3h6a3 3 0 01-3 3z" />
    </svg>
    <span>Upcoming</span>
  <% end %>

  <%= nav_link_to tweets_path, 
    class: nav_class,
    active_class: active_class,
    inactive_class: inactive_class do %>
    <svg xmlns="http://www.w3.org/2000/svg" class="fill-current h-6 w-6 mr-2" viewBox="0 0 20 20" fill="currentColor">
      <path d="M7 3a1 1 0 000 2h6a1 1 0 100-2H7zM4 7a1 1 0 011-1h10a1 1 0 110 2H5a1 1 0 01-1-1zM2 11a2 2 0 012-2h12a2 2 0 012 2v4a2 2 0 01-2 2H4a2 2 0 01-2-2v-4z" />
    </svg>
    <span>Tweets</span>
  <% end %>

  <%= nav_link_to keeps_path, 
    class: nav_class, 
    active_class: active_class, 
    inactive_class: inactive_class do %>
    <svg xmlns="http://www.w3.org/2000/svg" class="fill-current mr-2 h-6 w-6" viewBox="0 0 20 20" fill="currentColor">
      <path d="M4 3a2 2 0 100 4h12a2 2 0 100-4H4z" />
      <path fill-rule="evenodd" d="M3 8h14v7a2 2 0 01-2 2H5a2 2 0 01-2-2V8zm5 3a1 1 0 011-1h2a1 1 0 110 2H9a1 1 0 01-1-1z" clip-rule="evenodd" />
    </svg>
    <span>Keeps</span>
  <% end %>
</nav>
