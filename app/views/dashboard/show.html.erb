<% content_for :title, current_user&.username %>

<% if current_user.present? %>
  <br />

  <%= form_with(model: current_user.setting) do |form| %>
    <%= form.label :sweeping, style: "display: none;" %>
    <%= form.check_box :sweeping %>

    <span>Sweep tweets after </span>
    <%= form.label :time_threshold, style: "display: none;" %>
    <%= form.select :time_threshold, [7, 30, 90, 180, 365] %>
    <span> days</span>

    <%= form.submit "Save" %>
  <% end %>
  <br />

  <h3>Tweets to be deleted</h3>
  <%= render partial: "tweets/tweet", collection: @tweets %>
<% end %>
